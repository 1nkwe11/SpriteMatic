generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum ProjectionType {
  TWO_D
  ISOMETRIC
}

enum GenerationStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model User {
  id                   String             @id @default(cuid())
  email                String             @unique
  passwordHash         String
  role                 UserRole           @default(USER)
  dailyGenerationLimit Int                @default(50)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  refreshTokens        RefreshToken[]
  generations          SpriteGeneration[]
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, expiresAt])
}

model SpriteGeneration {
  id             String           @id @default(cuid())
  userId         String
  prompt         String
  themePrompt    String
  styleIntensity Int
  frameCount     Int
  spriteSize     Int
  projectionType ProjectionType
  animationType  String
  columns        Int
  rows           Int
  status         GenerationStatus @default(PENDING)
  modelVersion   String
  seed           Int?
  promptTokens   Int              @default(0)
  imageKey       String?
  imageUrl       String?
  jsonConfig     Json?
  qualityWarnings String[]
  errorReason    String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([status])
}
